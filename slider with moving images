            display: flex;
            flex-direction: column;
            align-items: center; /* Center contents vertically */
        }

        .image-slider-container {
            display: flex;
            justify-content: center; /* Center images in the container */
            width: auto; /* Adjust width to fit content */
            overflow: hidden;
        }

        .slider-image {
            width: 14.28%; /* For 7 images */
            cursor: pointer;
            display: flex;
            justify-content: center; /* Center image in its div */
        }

        img {
            width: 100%;
            height: auto;
            display: block;
        }

        .slider {
            -webkit-appearance: none;
            appearance: none;
            width: 100%; /* Full width of container */
            max-width: 800px; /* Adjust this to match image container width */
            height: 2px;
            background: #ddd;
            outline: none;
            opacity: 0.7;
            margin: 10px 0; /* Space above and below the slider */
            transition: opacity .2s;
